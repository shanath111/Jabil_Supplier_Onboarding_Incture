<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" class="sapUiSizeCompact">
	<ResponsivePopover showHeader="false" class="sapUiPopupWithPadding wbEmailTemplatePopover" placement="Vertical">
		<content>
			<HBox renderType="Bare">
				<SelectList selectionChange="onEmailSelectionChange" items="{ path: 'oDefaultDataModel>/emailAttributesDetails/customAttibutes', sorter: { path: 'label' } }">
					<core:Item text="{oDefaultDataModel>label}" key="{oDefaultDataModel>key}"/>
				</SelectList>
				<!--<Button icon="sap-icon://accept" tooltip="submit" press="onCloseTagFragment"></Button>-->
			</HBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>