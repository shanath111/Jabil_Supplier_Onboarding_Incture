<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog title="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>selDocType}:${oi18n_En>selDocType} + '/&#160;' +${i18n>selDocType}}" contentWidth="40%"  class="sapUiSizeCompact">
		<content>
        <HBox>
        <VBox class="sapUiTinyMarginTop sapUiSmallMarginBegin">
        <Label text="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>selDocType1}:${oi18n_En>selDocType1} + '/&#160;' +${i18n>selDocType1}}" required="false"/>
        <Label text="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>docType}:${oi18n_En>docType} + '/&#160;' +${i18n>docType}}" required="true"/>
            	<ComboBox width="50%" selectedKey="" class="inputStyle" change="fnDocTypeChange">
								<core:Item key="Indemnity Letter" text="Indemnity Letter"/>
								<core:Item key="Bank Verification" text="Bank Verification"/>
                                <core:Item key="other" text="Other"/>
                  </ComboBox>
            </VBox>
            </HBox>
			<OverflowToolbar class="barClass sapUiTinyMarginTop">
            	<ToolbarSpacer/>
				<Button class="cl_VRActnBtnClear" text="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>cancel}:${oi18n_En>cancel} + '/&#160;' +${i18n>cancel}}" press="fnCloseBank" tooltip="{i18n>cancel}"/>
				<!-- <Button  class="cl_VRActnBtnApply" text="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>done}:${oi18n_En>done} + '/&#160;' +${i18n>done}}" press="fnClose" tooltip="{i18n>done}"/> -->
			<u:FileUploader id="fileUploader_BA" buttonOnly="true" enabled="{oVisibilityModel>/bankDocTypeSelected}" fileType="doc,xls,pdf,jpeg,png,gif,docx,xlsx,jpg" typeMissmatch="fnHandleTypeMissmatch" buttonText="{= ${oVisibilityModel>/isdefaultLan}?${oi18n_En>selectFile}:${oi18n_En>selectFile} + '/&#160;' +${i18n>selectFile}}" multiple="true"
					useMultipart="true" change="fnOnFileUploadBPBank" sameFilenameAllowed="true" 
					class="cl_VRActnBtnApply">
                    <!-- <u:tooltip>
                        <c:Tooltip id="textTooltip"
                        text="{i18n>DocumentTooltip}"
                        offset="10 -5"
                        closeDuration="0"
                        />
                    </u:tooltip> -->
                    </u:FileUploader>
            </OverflowToolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>