<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>Comments}" contentWidth="25%">
		<content>
        <VBox fitContainer="true" alignContent="Center" class="sapUiSizeCompact sapUiTinyMarginBottom">   
            <Label required="{JMBankComments>/required}" text="{JMBankComments>/commentsTxt}" class="sapUiTinyMarginTop sapUiSmallMarginBegin"  wrapping="true"></Label>
            <TextArea value="{JMBankComments>/Comments}" liveChange="fnLiveChangeCmntTxtArea" valueState="{JMBankComments>/Commentse}" valueStateText="{JMBankComments>/Commentsm}" class="sapUiSmallMarginBegin" required="true"  width="90%" ></TextArea>
            </VBox>
			<OverflowToolbar class="barClass sapUiTinyMarginTop">
            	<ToolbarSpacer/>
				<Button class="cl_VRActnBtnClear" text="{i18n>close}" visible="true" press="fnCloseBankComments" tooltip="{i18n>close}"/>
				<Button  class="cl_VRActnBtnApply" text="{i18n>submit}" press="fnSubmitComments" tooltip="{i18n>submit}"/>
			</OverflowToolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>