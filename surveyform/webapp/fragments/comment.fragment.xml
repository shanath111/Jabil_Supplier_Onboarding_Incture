<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>confirmDecline}" contentWidth="25%">
		<content>
        <VBox fitContainer="true" alignContent="Center" class="sapUiSizeCompact sapUiTinyMarginBottom">   
            <Label text="{i18n>comments}" class="sapUiTinyMarginTop sapUiSmallMarginBegin"  wrapping="true"></Label>
            <TextArea value="{commentModel>/0/comment}" class="sapUiSmallMarginBegin" required="true" placeholder="{i18n>provideComments}" width="90%" ></TextArea>
            </VBox>
			<OverflowToolbar class="barClass sapUiTinyMarginTop">
            	<ToolbarSpacer/>
				<Button class="cl_VRActnBtnClear" text="{i18n>close}" visible="true" press="fnClose" tooltip="{i18n>close}"/>
				<Button  class="cl_VRActnBtnApply" text="{i18n>submit}" press="fnSubmitDecline" tooltip="{i18n>submit}"/>
			</OverflowToolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>