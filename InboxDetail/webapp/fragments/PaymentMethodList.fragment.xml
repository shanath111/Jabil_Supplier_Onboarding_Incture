<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Popover
		id="myListPopover"
		title="Payment Methods"
		afterClose="handleAfterClose"
		placement="Left">
		<List
			id="list"
			items="{/ProductCollection}" >
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				type="Active"
				icon="{ProductPicUrl}"
				iconDensityAware="false"
				iconInset="false" />
		</List>
    </Popover>
</core:FragmentDefinition>