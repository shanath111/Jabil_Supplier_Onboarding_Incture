<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:rt = "sap.ui.richtexteditor">
	<Dialog title="{i18n>EmailContent}" contentHeight="70%" contentWidth="70%"   class="sapUiSizeCompact APW_DilogClass">
		<content>
       <Toolbar >
       <Text text="{i18n>Recipiens} : {JMMailContent>/recipients}" ></Text>
       </Toolbar>
       <Toolbar >
       <Text text="{i18n>SentDate} : {JMMailContent>/notifiedDate}" ></Text>
       </Toolbar>
        <Toolbar >
       <Text text="{i18n>Subject} : {JMMailContent>/subject}" ></Text>
       </Toolbar>
       <rt:RichTextEditor width="97%" editable="false" showGroupFontStyle="false" showGroupFont="false" showGroupStructure="false" showGroupLink="false" showGroupTextAlign="false" showGroupUndo="false" showGroupClipboard="false" showGroupInsert="false" class="sapUiSmallMarginBegin" height="78%" value="{JMMailContent>/body}"></rt:RichTextEditor>
								
	
   
		</content>
       
         <endButton >
         	<Button class="cl_VRActnBtnClear" text="{i18n>Close}"  press="fnCloseEmailContent" tooltip="{i18n>BPCCancel}"/>
    </endButton>
	</Dialog>
</core:FragmentDefinition>